{
  "root": true,
  // We don't currently lint the demo app, but we should in the future. Some changes we'll need to make will
  // be to remove this ignore pattern and update the prefix rule for components and directives. We'll then need
  // to update the eslintrc.json file for the nw-style-guide project to have its own component and directive prefix
  // rules
  "ignorePatterns": [
    "src/app/"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "extends": [
        "./projects/nw-style-guide/src/linting-config/ts-files.json"
      ],
      "parserOptions": {
        "project": [
          "src/tsconfig.app.json"
        ]
      },
      "rules": {
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": [
              "element",
              "attribute"
            ],
            "prefix": "nw",
            "style": "kebab-case"
          }
        ],
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "nw",
            "style": "camelCase"
          }
        ]
      }
    },
    {
      "files": [
        "*.html"
      ],
      "extends": [
        "./projects/nw-style-guide/src/linting-config/html-files.json"
      ]
    }
  ]
}
