{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom",
      "ES2019.Array"
    ],
    /* We use these paths to reference the built library in the demo app */
    "paths": {
      "nw-style-guide": ["./lib-dist/nw-style-guide"],
      "nw-style-guide/*": ["./lib-dist/nw-style-guide/*"]
    },
    "module": "es2020",
    "baseUrl": "./",
    "useDefineForClassFields": false
  }
}